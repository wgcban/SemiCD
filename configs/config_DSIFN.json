{
    "name": "SemiCD-DSIFN-CD",
    "experim_name": "SemiCD_DSIFN_(sup)_40",
    "sup_percent": 40,
    "n_total_lbl": 14400,
    "n_gpu": 1,
    "diff_lrs": true,
    "ramp_up": 0.1,
    "unsupervised_w": 30,
    "lr_scheduler": "Poly",
    "use_weak_lables":false,
    "weakly_loss_w": 0.4,
    "pretrained": true,

    "model":{
        "supervised": true,
        "semi": false,
        "supervised_w": 1,

        "sup_loss": "CE",
        "un_loss": "MSE",

        "softmax_temp": 1,
        "aux_constraint": false,
        "aux_constraint_w": 1,
        "confidence_masking": false,
        "confidence_th": 0.5,

        "drop": 5,
        "drop_rate": 0.5,
        "spatial": true,
    
        "cutout": 5,
        "erase": 0.4,
    
        "vat": 2,
        "xi": 1e-6,
        "eps": 2.0,

        "context_masking": 2,
        "object_masking": 2,
        "feature_drop": 5,

        "feature_noise": 5,
        "uniform_range": 0.3
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-2,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "train_supervised": {
        "data_dir": "/media/lidan/ssd2/CDData/DSIFN_256",
        "batch_size": 8,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": true,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "split": "train_supervised",
        "num_workers": 2
    },

    "train_unsupervised": {
        "data_dir": "/media/lidan/ssd2/CDData/DSIFN_256",
        "weak_labels_output": "pseudo_labels",
        "batch_size": 8,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": true,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "split": "train_unsupervised",
        "num_workers": 2
    },

    "val_loader": {
        "data_dir": "/media/lidan/ssd2/CDData/DSIFN_256",
        "batch_size": 1,
        "val": true,
        "split": "val",
        "shuffle": false,
        "num_workers": 1
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "/media/lidan/ssd2/SemiCD/saved/DSIFN-CD",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "/media/lidan/ssd2/SemiCD/saved/DSIFN-CD",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
